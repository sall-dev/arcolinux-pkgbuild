# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=arcolinux-bspwm-git
_pkgname=arcolinux-bspwm
_destname="/etc/skel/.config/"
_licensedir="/usr/share/arcolinux/licenses/"
pkgver=19.2
pkgrel=5
pkgdesc="bspwm config and themes created for arcolinux"
arch=('any')
url="https://github.com/arcolinux/arcolinux-bspwm"
license=('GPL3')
makedepends=('git')
depends=('bash')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/arcolinux/${_pkgname}.git")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_destname}"
	mkdir -p "${pkgdir}${_licensedir}${_pkgname}"
	mv "${srcdir}/${_pkgname}/"LICENSE "${pkgdir}${_licensedir}${_pkgname}/LICENSE"
	cp -r "${srcdir}/${_pkgname}"/config/* "${pkgdir}${_destname}"
}
